import 'package:flutter/material.dart';
import 'package:firebase_auth/firebase_auth.dart';
import 'package:getfit/view/dialogflow_integration.dart'; // Import your Dialogflow integration file/service

class ChatbotScreen extends StatefulWidget {
  final User? currentUser;

  const ChatbotScreen({Key? key, required this.currentUser}) : super(key: key);

  @override
  _ChatbotScreenState createState() => _ChatbotScreenState();
}

class _ChatbotScreenState extends State<ChatbotScreen> {
  TextEditingController _messageController = TextEditingController();
  List<String> chatHistory = [];
  DialogflowIntegration dialogflowIntegration = DialogflowIntegration();

  Future<void> sendMessageToDialogflow(String message) async {
    try {
      String response = await dialogflowIntegration.sendMessageToDialogflow(message);
      setState(() {
        chatHistory.add(message);
        chatHistory.add(response);
      });
    } catch (error) {
      print('Error sending message: $error');
      // Handle error accordingly
    }
  }

  void sendMessage() {
    String message = _messageController.text.trim();
    if (message.isNotEmpty) {
      sendMessageToDialogflow(message);
      _messageController.clear();
    }
  }


  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Chatbot'),
      ),
      body: Column(
        children: [
          Expanded(
            child: ListView.builder(
              itemCount: chatHistory.length,
              itemBuilder: (context, index) {
                return ListTile(
                  title: Text(chatHistory[index]),
                );
              },
            ),
          ),
          Padding(
            padding: EdgeInsets.all(8.0),
            child: Row(
              children: [
                Expanded(
                  child: TextField(
                    controller: _messageController,
                    decoration: InputDecoration(
                      hintText: 'Type a message...',
                    ),
                  ),
                ),
                IconButton(
                  icon: Icon(Icons.send),
                  onPressed: sendMessage,
                ),
              ],
            ),
          ),
        ],
      ),
    );
  }
}

